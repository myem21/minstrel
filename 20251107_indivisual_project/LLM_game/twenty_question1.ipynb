from ollama import chat

MODEL_NAME = "EEVE-Korean-10.8B:latest"

def ask_ollama(messages):
    response = chat(model=MODEL_NAME, messages=messages)
    return response['message']['content']

def main():
    print("스무고개 게임 시작! 답(동물, 인물, 물건 등)을 머릿속에 떠올려 주세요.")
    history = []
    for turn in range(1, 21):
        if turn == 1:
            system_prompt = (
                "나는 AI야. 사용자가 특정 답(예: 동물, 인물, 물건 등)을 마음속으로 생각하고 있어."
                " 나는 예/아니오로 대답할 수 있는 질문만 하며 최대 20번 안에 정답을 맞춰야 해."
                " 첫번째 질문을 해줘."
            )
            messages = [
                {"role": "system", "content": system_prompt}
            ]
        else:
            qas = "\n".join([f"Q: {q}\nA: {a}" for q, a in history])
            user_prompt = (
                f"지금까지의 Q/A:\n{qas}\n"
                f"이전에 질문한 것을 고려해서 다음 예/아니오 질문을 해줘."
            )
            messages = [
                {"role": "system", "content": system_prompt},
                {"role": "user", "content": user_prompt}
            ]
        question = ask_ollama(messages)
        print(f"AI의 질문 {turn}: {question}")
        answer = input("당신의 대답 (예/아니오): ").strip()
        history.append((question, answer))
        if turn == 20 or answer.lower() in ["정답", "맞음"]:
            guess_prompt = (
                f"지금까지의 Q/A:\n{qas}\n"
                "위 정보를 바탕으로 최종 답을 추측해줘. 한 가지만 명확히 말해."
            )
            messages = [
                {"role": "system", "content": system_prompt},
                {"role": "user", "content": guess_prompt}
            ]
            guess = ask_ollama(messages)
            print(f"AI의 최종 답: {guess}")
            break

if __name__ == "__main__":
    main()
